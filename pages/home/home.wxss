.card {
    flex:1;
    width: 100%;
    font-size: 12px;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}
.card:not(:first-child) {
    margin-top: 20px;
}
.main-img-box {
    flex:1;
}
.author-info {
    flex:1;
    padding: 5px;
    border-bottom: 1px solid #f2f2f2;
}
.author-img-box {
    float: left;
}
.author-img {
    height: 40px;
    width: 40px;
    border-radius: 50%;
}
.author-name {
    padding: 5px;
    float: left;
    height: 30px;
}
.favorite-share {
    flex:1;
    display: flex;
    justify-content: space-around;
    border-bottom: 1px solid #f2f2f2;
}
.favorite {
    flex: 1 1 50%;
    padding: 10px;
    border-right: 1px solid #f2f2f2;
}
.favorite-icon {
    width: 15px;
    margin-right: 10px;
}
.share {
    padding: 10px;
    flex: 1 1 50%;
}
.share-icon {
    width: 15px;
    margin-right: 10px;
}